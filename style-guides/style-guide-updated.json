{
    "components": {
        "avatar": {
            "image": { "bg": "{colors.modes.light.background.subtle}" },
            "initials": {
                "bg": "{colors.states.primary.subtle}",
                "fontWeight": "{font.weight.semibold}",
                "text": "{colors.states.primary.default}"
            },
            "presence": {
                "away": {
                    "bg": "{colors.states.warning.default}",
                    "border": "2px solid {colors.modes.light.background.surface}"
                },
                "busy": {
                    "bg": "{colors.states.error.default}",
                    "border": "2px solid {colors.modes.light.background.surface}"
                },
                "online": {
                    "bg": "{colors.states.success.default}",
                    "border": "2px solid {colors.modes.light.background.surface}"
                }
            },
            "sizes": {
                "lg": { "fontSize": "{font.size.lg}", "size": 56 },
                "md": { "fontSize": "{font.size.md}", "size": 40 },
                "sm": { "fontSize": "{font.size.sm}", "size": 32 },
                "xs": { "fontSize": "{font.size.xs}", "size": 24 }
            },
            "tokens": { "radius": "{radius.pill}" }
        },

        "badge": {
            "dismissible": {
                "hover": { "iconColor": "{colors.modes.light.text.primary}" },
                "iconColor": "{colors.modes.light.text.secondary}"
            },
            "modes": {
                "dark": {
                    "neutral": {
                        "bg": "{colors.modes.dark.background.subtle}",
                        "text": "{colors.modes.dark.text.primary}"
                    }
                }
            },
            "tokens": {
                "fontWeight": "{font.weight.medium}",
                "height": "{height.sm}",
                "padding": [2, 8],
                "radius": "{radius.pill}"
            },
            "variants": {
                "error": { "bg": "{colors.states.error.subtle}", "text": "{colors.states.error.default}" },
                "neutral": {
                    "bg": "{colors.modes.light.background.subtle}",
                    "text": "{colors.modes.light.text.primary}"
                },
                "outline": {
                    "bg": "transparent",
                    "border": "1px solid {colors.modes.light.border.default}",
                    "text": "{colors.modes.light.text.primary}"
                },
                "primary": { "bg": "{colors.states.primary.subtle}", "text": "{colors.states.primary.default}" },
                "success": { "bg": "{colors.states.success.subtle}", "text": "{colors.states.success.default}" },
                "warning": { "bg": "{colors.states.warning.subtle}", "text": "{colors.states.warning.default}" }
            }
        },

        "link": {
            "active": { "text": "{colors.states.primary.active}" },
            "base": {
                "decoration": "underline",
                "decorationThickness": 1,
                "fontWeight": "{font.weight.medium}",
                "text": "{colors.states.primary.default}",
                "underlineOffset": 2
            },
            "disabled": { "decoration": "none", "text": "{colors.modes.light.text.disabled}" },
            "focus-visible": { "shadow": "{shadow.focus}" },
            "hover": { "text": "{colors.states.primary.hover}" },
            "modes": { "dark": { "visited": { "text": "{colors.base.indigo.500}" } } },
            "visited": { "text": "{colors.base.indigo.700}" }
        },

        "progress": {
            "circular": {
                "bar": { "bg": "{colors.states.primary.default}" },
                "sizes": { "lg": 40, "md": 32, "sm": 24 },
                "strokeWidth": 4,
                "track": { "bg": "{colors.modes.light.background.subtle}" }
            },
            "linear": {
                "bar": {
                    "bg": "{colors.states.primary.default}",
                    "radius": "{radius.pill}",
                    "shadow": "{shadow.level1}"
                },
                "indeterminate": { "bg": "{colors.states.primary.hover}" },
                "track": { "bg": "{colors.modes.light.background.subtle}", "height": 6, "radius": "{radius.pill}" }
            }
        },

        "radio": {
            "a11y": { "minTouchTarget": 44 },
            "circle": {
                "checked": { "border": "1px solid {colors.states.primary.default}" },
                "disabled": {
                    "bg": "{colors.modes.light.background.subtle}",
                    "border": "1px solid {colors.modes.light.border.default}"
                },
                "focus-visible": { "shadow": "{shadow.focus}" },
                "hover": { "border": "1px solid {colors.modes.light.border.strong}" },
                "unchecked": {
                    "bg": "{colors.modes.light.background.surface}",
                    "border": "1px solid {colors.modes.light.border.default}",
                    "shadow": "{shadow.level0}"
                }
            },
            "dot": { "bg": "{colors.states.primary.default}" },
            "label": { "gap": "{spacing.2}", "text": "{colors.modes.light.text.primary}" },
            "modes": {
                "dark": {
                    "circle": {
                        "unchecked": {
                            "bg": "{colors.modes.dark.background.surface}",
                            "border": "1px solid {colors.modes.dark.border.default}"
                        }
                    }
                }
            },
            "tokens": { "inner": 10, "outer": 18 }
        },

        "spinner": {
            "colors": { "default": "{colors.states.primary.default}", "inverse": "{colors.modes.light.text.inverse}" },
            "sizes": { "lg": 28, "md": 20, "sm": 16 },
            "strokeWidth": 2
        },

        "switch": {
            "a11y": { "minTouchTarget": 44 },
            "disabled": {
                "thumb": { "bg": "{colors.modes.light.background.subtle}" },
                "track": { "bg": "{colors.modes.light.border.light}" }
            },
            "focus-visible": { "shadow": "{shadow.focus}" },
            "hover": { "track": { "bg": "{colors.states.primary.hover}" } },
            "modes": {
                "dark": {
                    "off": { "track": { "bg": "{colors.modes.dark.border.default}" } },
                    "on": {
                        "thumb": { "bg": "{colors.modes.dark.text.primary}" },
                        "track": { "bg": "{colors.states.primary.default}" }
                    }
                }
            },
            "off": {
                "thumb": { "bg": "{colors.modes.light.background.surface}", "shadow": "{shadow.level1}" },
                "track": { "bg": "{colors.modes.light.border.default}" }
            },
            "on": {
                "thumb": { "bg": "{colors.modes.light.text.inverse}" },
                "track": { "bg": "{colors.states.primary.default}" }
            },
            "tokens": { "radius": "{radius.pill}", "thumb": 18, "trackHeight": 24, "trackWidth": 44 }
        },

        "textarea": {
            "base": {
                "bg": "{colors.modes.light.background.surface}",
                "border": "1px solid {colors.modes.light.border.default}",
                "minHeight": 96,
                "padding": "{spacing.3}",
                "radius": "{radius.sm}",
                "shadow": "{shadow.level0}",
                "text": "{colors.modes.light.text.primary}"
            },
            "disabled": {
                "bg": "{colors.modes.light.background.subtle}",
                "text": "{colors.modes.light.text.disabled}"
            },
            "error": { "border": "1px solid {colors.states.error.default}" },
            "focus": { "border": "1px solid {colors.modes.light.border.focus}", "shadow": "{shadow.focus}" },
            "hover": { "border": "1px solid {colors.modes.light.border.strong}" },
            "modes": {
                "dark": {
                    "base": {
                        "bg": "{colors.modes.dark.background.surface}",
                        "border": "1px solid {colors.modes.dark.border.default}",
                        "text": "{colors.modes.dark.text.primary}"
                    }
                }
            },
            "resize": "vertical"
        },

        "tooltip": {
            "a11y": { "maxWidth": 320, "minDelay": 150 },
            "arrow": { "offset": 6, "size": 8 },
            "dark": {
                "bg": "{colors.modes.dark.background.surface}",
                "border": "1px solid {colors.modes.dark.border.default}",
                "text": "{colors.modes.dark.text.primary}"
            },
            "light": {
                "bg": "{colors.modes.light.background.surface}",
                "border": "1px solid {colors.modes.light.border.default}",
                "text": "{colors.modes.light.text.primary}"
            },
            "tokens": { "padding": [4, 8], "radius": "{radius.sm}", "shadow": "{shadow.level2}" }
        }
    }
}
