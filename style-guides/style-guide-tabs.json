{
    "accessibility": {
        "aria-controls": "associated panel id",
        "aria-selected": "true for active tab",
        "role": "tablist"
    },
    "sizes": {
        "md": {
            "font": { "size": "{font.size.md}", "weight": "{font.weight.medium}" },
            "height": 40,
            "padding": [0, 16],
            "radius": "{radius.md}"
        },
        "sm": {
            "font": { "size": "{font.size.sm}", "weight": "{font.weight.medium}" },
            "height": 32,
            "padding": [0, 12],
            "radius": "{radius.sm}"
        }
    },
    "states": {
        "active": {
            "border": "{colors.states.primary.default}",
            "shadow": "{shadow.level1}",
            "text": "{colors.states.primary.default}"
        },
        "default": {
            "bg": "transparent",
            "border": "transparent",
            "text": "{colors.modes.light.text.secondary}"
        },
        "disabled": { "border": "transparent", "text": "{colors.modes.light.text.disabled}" },
        "hover": {
            "border": "{colors.modes.light.border.default}",
            "text": "{colors.modes.light.text.primary}"
        },
        "focus": {
            "outline": "{colors.states.focus.outline}",
            "shadow": "{shadow.level2}"
        }
    },
    "active": {
        "bg": "{colors.states.primary.subtle}",
        "shadow": "{shadow.level1}",
        "text": "{colors.states.primary.default}"
    },
    "default": {
        "bg": "transparent",
        "height": "{height.md}",
        "margin": [0, "{spacing.2}"],
        "padding": "{spacing.3}",
        "radius": "{radius.md}",
        "shadow": "{shadow.level0}",
        "text": "{colors.modes.light.text.secondary}"
    },
    "hover": { "text": "{colors.states.primary.hover}" },
    "animation": {
        "transition": "all 0.3s ease-in-out",
        "easing": "cubic-bezier(0.4, 0, 0.2, 1)"
    },
    "spacing": {
        "gap": "{spacing.2}",
        "margin": [0, "{spacing.2}"]
    },
    "alignment": {
        "justifyContent": "center",
        "alignItems": "center"
    }
}
